{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "plugins": [{ "name": "next" }],
    "paths": { "@/*": ["./src/*"], "@/shared/lib/hooks": ["./src/shared/lib/hooks/index.ts"], "@/components/ui": ["./src/components/ui/index.ts"] }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/prisma/seed.ts", ".ai-assistant/ai.ts", "scripts/seed.ts", 
    //"src/shared/modules/orchestrator.ts.bak"  
  ],
  "exclude": ["node_modules"]
}
